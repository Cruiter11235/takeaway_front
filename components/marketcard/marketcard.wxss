.mcard{
  display: flex;
  flex-direction: row;
  border-radius: 15px;
  margin-top: 10px;
  width: 100%;
  height: 100px;
  background-color: white;
}
.mimg{
  height: 90px;
  width:90px;
  border-radius: 10px;
}
.cright{
  height: 100px;
  width: calc(100% - 100px);
  /* background-color: green; */
  display: flex;
  flex-direction: column;
}
.title{
  overflow:hidden;
  margin-left: 10px;
  margin-top: 5px;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.desp{
  margin-left: 5px;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
