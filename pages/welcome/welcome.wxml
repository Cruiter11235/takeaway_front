<!--pages/welcome/welcome.wxml-->
<view class="container">
<l-form name="student" l-form-btn-class="l-form-btn-class" bind:linsubmit="submit">
    <l-form-item label="用户名:" name="username">
        <l-input id="username" value="{{student.name}}" hide-label show-row="{{false}}"/>
    </l-form-item>

    <l-form-item label="密码:" name="password">
        <l-input id="password" value="{{student.age}}" hide-label show-row="{{false}}"/>
    </l-form-item>

    <view slot="submit">
        <l-button bind:tap="submit">提交</l-button>
    </view>
    <view slot="reset">
        <l-button type="default" plain>重置</l-button>
    </view>
</l-form>

